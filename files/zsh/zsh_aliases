# Useful aliases

# Navigation & File Management
alias zshconfig="micro ~/.zshrc"
alias zshconfig_reload="source ~/.zshrc"
alias zshaliases="micro ~/.zsh_aliases"
alias ohmyzsh="micro ~/.oh-my-zsh"
alias ll="ls -la"
alias lla="ls -Al"
alias ..="cd .."
alias ...="cd ../.."
alias cat="batcat"
alias free="free -h"
alias grep="grep --color=auto"
alias diff="diff -y --color=auto --suppress-common-lines"

# Development
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gc_auto_commit_name="git commit -m \"$(curl -s https://whatthecommit.com/index.txt)\""
alias gp="git push"
alias gl="git pull"
alias gd="git diff"
alias gco="git checkout"
alias gb="git branch"
git-prune-branches () {
        echo "switching to master or main branch.."
        git branch | grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox,.venv,venv} 'main\|master' | xargs -n 1 git checkout
        echo "fetching with -p option..."
        git fetch -p
        echo "running pruning of local branches"
        git branch -vv | grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox,.venv,venv} ': gone]' | grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox,.venv,venv} -v "\*" | awk '{ print $1; }' | xargs -r git branch -D
}

# Go
# ðŸ§ª Build test binary with debug info
alias gobuildtestdbg='go test -c -gcflags="all=-N -l"'
# ðŸ› ï¸ Build your main app with debug info
alias gobuilddbg='go build -gcflags="all=-N -l"'

# Docker & Kubernetes
alias k="kubectl"
alias kga="kubectl get all"
alias kgp="kubectl get pods"
alias kgs="kubectl get services"
alias kgn="kubectl get nodes"
alias kd="kubectl describe"
alias d="docker"
alias dc="docker-compose"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias di="docker images"
alias docker_remove_dangling="docker images -f 'dangling=true' -q | xargs -r docker rmi 2>/dev/null || true"
alias docker_remove_all_containers="docker ps -aq | xargs docker rm -f"

# Mark Navigation
alias m="mark"
alias j="jump"
alias mls="marks"

# Network
alias ports="ss -tulanp"
alias myip="curl http://ipecho.net/plain; echo"
alias ping="ping -c 5"
alias wget="wget -c"
